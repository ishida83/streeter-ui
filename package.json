{
  "name": "streeter-ui",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "8.1.4"
  },
  "scripts": {
    "start": "yarn serve:dev",
    "test": "yarn lint && yarn coverage",
    "mocha": "mocha --opts .mocharc 'src/**/*-test.js' -w",
    "coverage": "istanbul cover _mocha -- --opts .mocharc 'src/**/*-test.js'",
    "serve:dev": "babel-node ./webpack/webpack.config.dev",
    "serve:prod": "node ./server.js",
    "build:prod": "node -r babel-register node_modules/.bin/webpack -p --config ./webpack/webpack.config.prod",
    "dist": "yarn run clean && yarn build:prod",
    "clean": "rm -rf ./dist && mkdir ./dist",
    "lint": "yarn eslint && yarn stylelint && yarn flow",
    "eslint": "eslint ./src",
    "stylelint": "stylelint 'src/**/*.scss'",
    "flow": "flow"
  },
  "dependencies": {
    "babel-plugin-inline-react-svg": "^0.4.0",
    "express": "^4.15.2",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-router-dom": "^4.1.1",
    "react-tap-event-plugin": "^2.0.1"
  },
  "devDependencies": {
    "autoprefixer": "^6.7.7",
    "babel": "^6.23.0",
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^6.4.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "chai": "^3.5.0",
    "copy-webpack-plugin": "^4.0.1",
    "css-loader": "^0.28.0",
    "css-modules-require-hook": "^4.0.6",
    "enzyme": "^2.8.2",
    "es6-promise": "^4.1.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-flowtype": "^2.32.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.3",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "^0.11.2",
    "flow-bin": "^0.44.2",
    "html-webpack-plugin": "^2.28.0",
    "ignore-styles": "^5.0.1",
    "isomorphic-fetch": "^2.2.1",
    "istanbul": "1.0.0-alpha.2",
    "lodash": "^4.17.4",
    "mocha": "^3.3.0",
    "node-sass": "^4.5.2",
    "normalize.css": "^7.0.0",
    "postcss-loader": "^1.3.3",
    "postcss-simple-vars": "^3.1.0",
    "prop-types": "^15.5.9",
    "react-test-renderer": "^15.5.4",
    "sinon": "^2.1.0",
    "style-loader": "^0.16.1",
    "stylelint": "^7.10.1",
    "stylelint-config-standard": "^16.0.0",
    "uglifyjs-webpack-plugin": "^0.4.3",
    "webpack": "^2.4.1",
    "webpack-combine-loaders": "^2.0.3",
    "webpack-dev-server": "^2.4.2"
  }
}
